<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitStart"
        android:src="@drawable/background_auth" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fbSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_settings"
        android:layout_margin="16dp"
        android:layout_gravity="end"
        app:fabSize="mini"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:drawableStart="@drawable/ic_user"
            android:drawablePadding="8dip"
            android:hint="@string/activity_login_hint_login"
            android:inputType="text"
            android:paddingStart="8dp"/>

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="60dp"
            android:drawableStart="@drawable/ic_lock"
            android:drawablePadding="8dip"
            android:hint="@string/activity_login_hint_password"
            android:inputType="textPassword"
            android:paddingStart="8dp"/>

        <Button
            android:id="@+id/btnLogin"
            style="@style/AppTheme.Button.Accent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="42dp"
            android:layout_marginRight="60dp"
            android:layout_marginBottom="106dp"
            android:text="@string/activity_login_btn_login" />

    </LinearLayout>
</FrameLayout>