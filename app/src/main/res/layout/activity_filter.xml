<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvDateFromName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="Дата документа с *" />

                    <android.support.design.button.MaterialButton
                        android:id="@+id/btnDateFrom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:icon="@drawable/ic_calendar"
                        app:iconGravity="start"
                        app:iconTint="@color/gray_dark"
                        style="@style/AppTheme.Button.Default"
                        android:layout_marginEnd="4dp"
                        tools:text="12.12.2019" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvDateToName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="Дата документа по *"
                        />

                    <android.support.design.button.MaterialButton
                        android:id="@+id/btnDateTo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:icon="@drawable/ic_calendar"
                        app:iconGravity="start"
                        app:iconTint="@color/gray_dark"
                        style="@style/AppTheme.Button.Default"
                        android:layout_marginStart="4dp"
                        tools:text="29.12.2019" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llDynamicPart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        android:orientation="horizontal">

        <android.support.design.button.MaterialButton
            android:id="@+id/btnApply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/AppTheme.Button.Accent"
            android:layout_marginEnd="4dp"
            android:text="@string/filter_activity_btn_apply" />

        <android.support.design.button.MaterialButton
            android:id="@+id/btnClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/AppTheme.Button.Default"
            android:layout_marginStart="4dp"
            android:text="@string/filter_activity_btn_clear"/>

    </LinearLayout>
</LinearLayout>