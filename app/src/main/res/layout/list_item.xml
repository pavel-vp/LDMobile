<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:orientation="horizontal" >

    <ImageView
        android:layout_height="wrap_content"
        android:layout_width="30dp"
        android:layout_gravity="center"
        android:id="@+id/imgDocType"
        android:src="@mipmap/type_torg12">
    </ImageView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvDocTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Торговая накладная" />
        <TextView
            android:id="@+id/tvDocBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="№112 от 11.11.2019" />
    </LinearLayout>

    <ImageView
        android:layout_height="wrap_content"
        android:layout_width="30dp"
        android:id="@+id/imgAttache"
        android:layout_gravity="center"
        android:src="@mipmap/attache">
    </ImageView>


</LinearLayout>